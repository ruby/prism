#!/usr/bin/env ruby
# frozen_string_literal: true

$:.unshift(File.expand_path("../lib", __dir__))
require "ripper"
require "yarp"

filepath = ARGV.first
pattern = "%-70s %-70s"

puts pattern % ["Ripper lex", "YARP lex"]
puts pattern % ["-" * 70, "-" * 70]

source = File.read(filepath)
ripper = YARP.remove_tilde_heredocs(YARP.lex_ripper(source))
yarp = YARP.remove_tilde_heredocs(YARP.lex_compat(source).value)

[yarp.length, ripper.length].max.times do |index|
  left = ripper[index]
  right = yarp[index]

  color = left == right ? "38;5;102" : "1;31"
  puts "\033[#{color}m#{pattern}\033[0m" % [left.inspect, right.inspect]
end
